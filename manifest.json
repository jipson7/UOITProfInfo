{
	"manifest_version": 2,

	"name": "transparentUOIT",
	"description": "Injects information on UOIT professors into any UOIT domain, including 'ratemyprofessor' ratings, salary information from the sunshine list, and more.",
	"version": "1.0",

	"permissions": [
    	"http://localhost/transparentUOIT/ratings.php"
  	],

	"content_scripts": [
	{
		"matches": ["http://www.science.uoit.ca/people*", 
		"http://www.businessandit.uoit.ca/people*", 
		"http://education.uoit.ca/people*", 
		"http://nuclear.uoit.ca/people*", 
		"http://www.engineering.uoit.ca/people*", 
		"http://www.healthsciences.uoit.ca/people*", 
		"http://www.socialscienceandhumanities.uoit.ca/people*",
		"https://ssbp.mycampus.ca/prod/bwskfshd.P_CrseSchdDetl",
		"https://ssbp.mycampus.ca/prod/bwskfcls.P_GetCrse"],
		"js": ["lib/jquery.js", "lib/tooltipster.js", "PROF_MASTERLIST.js", "transparentLogic.js"],
		"css": ["lib/tooltipster.css"],
		"run-at": "document_start",
		"all_frames": true,
		"match_about_blank": true
	}
	],

	"web_accessible_resources": ["icon.png"]
	
}
